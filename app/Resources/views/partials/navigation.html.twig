{% set currentRoute = app.request.attributes.get('_route') %}
<div class="navbar navbar-warning">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="javascript:void(0)">SeriesTracker</a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
            <li {% if 'homepage' == currentRoute %}class="active"{% endif %}>
                <a href="{{ path('homepage') }}">Home</a>
            </li>
            <li {% if 'series' == currentRoute %}class="active"{% endif %}>
                <a href="{{ path('series') }}">Series</a>
            </li>
        </ul>
        <form class="navbar-form navbar-left">
            <input type="text" class="form-control col-lg-12" placeholder="Search">
        </form>
        <ul class="nav navbar-nav navbar-right">
            {% if app.user %}
            <li class="dropdown">
                <a href="" data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                    {{ app.user.username }} <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                    <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                    <li class="divider"></li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin') }}">Admin panel</a></li>
                    <li class="divider"></li>
                    {% endif %}
                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                </ul>
            </li>
            {% else %}
            <li>
                <a href="{{ path('fos_user_security_login') }}">Log in</a>
            </li>
            <li>
                <a href="{{ path('fos_user_registration_register') }}">Sing up</a>
            </li>
            {% endif %}
        </ul>
    </div>
</div>
